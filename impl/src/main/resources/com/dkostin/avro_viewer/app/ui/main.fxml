<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.dkostin.avro_viewer.app.ui.MainController"
            styleClass="root">

    <!-- Top bar -->
    <top>
        <HBox spacing="10" styleClass="topbar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <MenuButton text="File" styleClass="btn">
                <items>
                    <MenuItem text="Open .avro file..." onAction="#onOpenFile"/>
                </items>
            </MenuButton>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Export → JSON" onAction="#onExportJson" styleClass="btn"/>
            <Button text="Export → CSV" onAction="#onExportCsv" styleClass="btn"/>

            <!-- THEME SWITCH -->
            <HBox spacing="8" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="0" right="0" bottom="0" left="10"/>
                </padding>
                <Label text="Light" styleClass="muted"/>
                <ToggleButton fx:id="themeToggle" text="⚪⚫" onAction="#onThemeToggle" styleClass="switch"/>
                <Label text="Dark" styleClass="muted"/>
            </HBox>

        </HBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="14" right="14" bottom="14" left="14"/>
            </padding>

            <!-- Filters card -->
            <VBox spacing="12" styleClass="card">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14"/>
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label text="Filters" styleClass="h1"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label text="All filters are combined with AND" styleClass="muted"/>
                </HBox>

                <!-- Global controls row -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <VBox spacing="6">
                        <Label text="Page size:" styleClass="muted"/>
                        <ComboBox fx:id="pageSizeCombo" prefWidth="190"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label text="Max search results:" styleClass="muted"/>
                        <TextField fx:id="maxResultsField" prefWidth="140" promptText="e.g. 500" text="500"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button text="Apply" onAction="#onApplyFilters" styleClass="btn-primary"/>
                    <Button text="Clear" onAction="#onClearFilters" styleClass="btn-danger"/>
                </HBox>

                <!-- Filters list (dynamic rows will be added here) -->
                <ScrollPane fitToWidth="true" pannable="true"
                            vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
                            prefViewportHeight="100"
                            maxHeight="280"
                            styleClass="filters-scroll">
                    <content>
                        <VBox fx:id="filtersBox" spacing="10" styleClass="filters-list"/>
                    </content>
                </ScrollPane>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="+ Add filter" onAction="#onAddFilter" styleClass="btn"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="resultsLabel" styleClass="muted"/>
                </HBox>
            </VBox>

            <!-- Table -->
            <VBox spacing="10" styleClass="card" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="14" right="14" bottom="14" left="14"/>
                </padding>

                <TableView fx:id="table" VBox.vgrow="ALWAYS"/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="prevBtn" text="&lt; Prev" onAction="#onPrevPage" styleClass="btn"/>
                    <Label fx:id="pageLabel" text="Page 1" styleClass="muted"/>
                    <Button fx:id="nextBtn" text="Next &gt;" onAction="#onNextPage" styleClass="btn"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="statusLabel" text="Loaded 50 records from data.avro." styleClass="muted"/>
                </HBox>
            </VBox>

        </VBox>
    </center>
</BorderPane>
